<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BdP_MV.View.MasterDetail.ItemsPage"
              Title="Mitgliederliste">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="NewMitglied" Order="Primary" Text="Neues Mitglied" Priority="0" Activated="NewMitglied_Activated" />

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout Spacing="0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <ActivityIndicator 
                       IsVisible="{Binding IsBusy}"
                       IsRunning="{Binding IsBusy}"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.33}" />


                <Picker 
                    x:Name="testpicker" 
            Title="Gruppe auswählen"
                    SelectedIndexChanged="thePickerSelectedIndexChanged"

                    ItemDisplayBinding="{Binding descriptor}"
                    SelectedItem="{Binding aktGruppe}"
           
                />
                <!--ItemsSource="{Binding alleGruppen}"-->
                <ListView x:Name="MitgliedView" ItemTapped="ItemTapped" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Vertical" Padding="10,0,0,0">
                                    <Label Text="{Binding ansprechname}"></Label>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding entries_vorname}" TextColor="Gray"></Label>
                                        <Label Text="{Binding entries_nachname}"  TextColor="Gray"></Label>
                                    </StackLayout>

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
