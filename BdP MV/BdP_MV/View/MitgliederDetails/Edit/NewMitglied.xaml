<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BdP_MV.View.MitgliederDetails.Edit.NewMitglied"
		Title="Neues Mitglied">
	<ContentPage.ToolbarItems>
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ActivityIndicator x:Name="activity"  
                       IsRunning="{Binding IsBusy}"  
                       IsEnabled="{Binding IsBusy}"
                       IsVisible="{Binding IsBusy}"
                       Color="Blue"  
                       BackgroundColor="Transparent"/>


                <Entry x:Name="titelEntry" Placeholder="Titel" />
               
                   
                    <Entry x:Name="vornameEntry" Placeholder="Vorname"/>
               
                    <Entry x:Name="nachnameEntry" Placeholder="Nachname"/>
             
                    <Entry x:Name="spitznameEntry" Placeholder="Spitzname"/>
              
                    <Picker 
                    x:Name="geschlechtspicker" 
                    Title="Geschlecht*"
                        ItemDisplayBinding="{Binding descriptor}"/>






                <StackLayout Orientation="Horizontal">

                    <Label Text="Geburtsdatum*" FontSize="Medium" />

                    <DatePicker x:Name="geburtsdatumEntry" VerticalOptions="CenterAndExpand" DateSelected="GeburtsdatumChanged">
                        <DatePicker.Format>dd.MM.yyyy</DatePicker.Format>
                    </DatePicker>
                </StackLayout>

                <StackLayout Orientation="Horizontal">

                    <Label Text="Eintrittsdatum*" FontSize="Medium" />
                    <DatePicker x:Name="eintrittsdatumEntry" VerticalOptions="CenterAndExpand">
                        <DatePicker.Format>dd.MM.yyyy</DatePicker.Format>
                    </DatePicker>
                </StackLayout>
                <Picker 
                    x:Name="beitragsartpicker" 
                    Title="Beitragsart*"
                    ItemDisplayBinding="{Binding descriptor}"/>
              
                <Picker 
                    x:Name="mitgliedsartpicker" 
                    Title="Mitgliedstyp*"
                    ItemDisplayBinding="{Binding descriptor}"/>
               

                <StackLayout Orientation="Horizontal">

                    <Label Text="Verand Pfade" FontSize="Medium" />
                    <Switch x:Name="zeitschriftenversand" IsToggled="true" />
                </StackLayout>
                <Picker 
                    x:Name="landpicker" 
                    Title="Land"
                    ItemDisplayBinding="{Binding descriptor}"/>


                
            <Entry x:Name="nameZusatz" Placeholder="Namens-/ Adrresszusatz"/>
            <Entry x:Name="strasse" Placeholder="Straße / Hausnummer *"/>
            <Entry x:Name="plz" Placeholder="PLZ"/>
            <Entry x:Name="ort" Placeholder="Ort"/>
            <Entry x:Name="email" Placeholder="E-Mail"/>
            <Entry x:Name="emailVertretungsberechtigter" Placeholder="E-Mail Erziehungsberechtigt"/>
            <Entry x:Name="email2" Placeholder="E-Mail 2"/>
            <Entry x:Name="telefon1" Placeholder="Telefon"/>
            <Entry x:Name="telefon3" Placeholder="Mobiltelefon"/>
            <Entry x:Name="begruendungMitglied" Placeholder="Aufnahmeantrag Ü18: Begründung Mitglied" IsEnabled="False" IsVisible="False"/>
            <Entry x:Name="begruendungStamm" Placeholder="Aufnahmeantrag Ü18: Begründung Stamm" IsEnabled="False" IsVisible="False"/>
                <Button x:Name="btn_save"  Text="Abschicken" Clicked="Save_Clicked" />
        </StackLayout>
        </ScrollView>
	</ContentPage.Content>
</ContentPage>
